<%= flash[:notice] %>
<div class="container">
  <div class="row">
   <%= render 'shared/profile', user: @user, book: @new %>
     <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table">
       <tbody>
         <tr>
            <td><%= link_to user_path(@book.user.id) do %>
            <%= image_tag @book.user.get_profile_image(100,100) %>
            <% end %><br>
            <%= link_to @book.user.name, user_path(@book.user.id) %></td>
            <td><%= link_to @book.title, book_path(@book.id) %></td>
            <td><%= @book.body %></td>
            <% if @book.user == current_user %>
               <td><%= link_to "Edit", edit_book_path(@book.id), class: "btn btn-sm btn-success" %></a></td>
               <td><%= link_to "Destroy", book_path(@book.id), class: "btn btn-sm btn-danger", method: :delete %></a></td>
             <% end %>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>