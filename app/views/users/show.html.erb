<%= flash[:notice] %>
<div class="container">
  <div class="row">
  <%= render 'shared/profile', user: @user, book: @book %>
    <div class="col-md-8 offset-md-1">
    <h2>Books</h2>
    <table class="table table-hover table-inverse">
      <thead>
        <tr>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
          <th colspan="3"></th>
        </tr>
       </thead>
       <tbody>
         <tr>
           <% @books.each do |book| %>
           <td><%= link_to user_path(book.user.id) do %>
            <%= image_tag book.user.get_profile_image(100,100) %>
            <% end %><br>
           <td><%= link_to book.title, book_path(book.id) %></td>
           <td><%= book.body %></td>
         </tr>
      </body>
        <% end %>
      </table>
    </div>
  </div>
</div>