<div class="container">
  <div class="row">
  <%= render 'shared/profile', user: @user %>

  <div class="col-md-8 offset-md-1">
    <h1>Users</h1>
    <table class="table">
      <thead>
        <tr>
          <th>image</th>
          <th>name</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td><% @users.each do |user| %>
             <% if @user.image.attached? %>
               <%= link_to user_path(@user.id) do %>
               <%= image_tag @user.image, size: "width, height" %>
             <% end %>
             <% else %>
               <%= link_to user_path(@user.id) do %>
               <%= image_tag 'no_image', size: "width, height" %>
             <% end %>
             <% end %></td>
          <td><%= user.name%></td>
          <td> <%= link_to "show", user_path(@user.id) %></td>
          <% end %>
        </tr>
      </tbody>
    </table>
  </div>
 </div>
</div>